---
import { Image } from 'astro:assets';
import Logo from '/src/logo-placeholder.png'
---
<div class="bg-stone-800 m-auto">
  <div class="px-12 pt-12 pb-16 grid auto-rows-fr sm:grid-cols-3 justify-center items-start">
    <a class="transition-all duration-300" :class="{'h-28 w-28': !scrolledFromTop, 'h-16 w-16': scrolledFromTop}" href="#">
      <Image class="h-48 w-48" src={Logo} alt="placeholder fictional company logo">
    </a>
    <div>
      <h4 class="text-2xl text-amber-300">Contact</h3>
      <ul class="text-white text lg md:text-xl">
        <li><a>some</a></li>
        <li><a>links</a></li>
        <li><a>right</a></li>
        <li><a>here</a></li>
      </ul>
    </div>
    <div>
      <h4 class="text-2xl text-amber-300">Get a free quote today!</h3>
      <button class="px-6 py-3 mt-4 text-white transition-colors duration-300 bg-red-600 rounded-lg focus:shadow-outline hover:bg-red-700">Get a Free Quote!</button>
    </div>
  </div>
</div>
